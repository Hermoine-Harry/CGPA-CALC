  <body>
    <div class="container">
      <h1 class="brand"><span>CGPA</span> Calculator</h1>
      <div class="wrapper">
        <div class="dept-info">
          <div class="logo-div">
            <img src="/css/mit1-logo.png" alt="" class="logo">
          </div>
          <div class="logo-title">
            <ul>
              <li>Madras Institute of Technology campus,</li>
              <li>Anna University,</li>
              <li>Chromepet.</li>
            </ul>
          </div>
          <div class="contact-div">
            <ul>
              <li><a href="/contact" class="contact-btn"><i class="fas fa-phone-alt"></i>Contact Us</a></li>
            </ul>

          </div>
        </div>
        <div class="selected-info">
          <form >
            <p>
              <label for="dept">Department</label>
              <select id = "d"class="" name="dept">
                <option value="dpt"><---Department--></option>
                <option id="ae" value="aero">AERONAUTICAL</option>
                <option value="auto">AUTOMOBILE</option>
                <option value="cs">COMPUTER SCIENCE</option>
                <option value="ece">ELECTRONICS AND COMMUNICATION </option>
                <option value="it">INFORMATION TECHNOLOGY</option>
                <option value="ins">INSTRUMENTATION</option>
                <option value="pr">PRODUCTION</option>
                <option value="rpt">RUBBER AND PLASTICS</option>
                <option value="mech">MECHANICAL</option>
              </select>
            </p>
            <p>
              <label for="reg">Regulation</label>
              <select id="r" name="reg">
                <option value=""><--Regulation--></option>
                <!-- <option value="r19">R2019</option>
                <option value="r15">R2015</option> -->
              </select>
            </p>
            <p>
              <label for="sem">Semester</label>
              <select id="s" name="sem">
                <option value="1">I</option>
                <option value="2">II</option>
                <option value="3">III</option>
                <option value="4">IV</option>
                <option value="5">V</option>
                <option value="6">VI</option>
                <option value="7">VII</option>
                <option value="8">VIII</option>
              </select>
            </p>
            <a href="#"id="l"onclick="link()" class="contact-btn">SUBMIT</a>
          </form>
        </div>
    </div>
</div>
<script >
$(document).ready(function () {
  $("#d").change(function () {
     switch($(this).val()) {
       case 'aero':
           $("#r").html("<option value='r19'>R2019</option>");
           break;
        case 'cs':
            $("#r").html("<option value='r18'>R2018</option>");
            break;
        case 'auto':
            $("#r").html("<option value='r15'>R2015</option><option value='r19'>R2019</option>");
            break;

            case 'ece':
                $("#r").html("<option value='r19'>R2019</option>");
                break;
                case 'ins':
                    $("#r").html("<option value='r19'>R2019</option>");
                    break;
                    case 'it':
                        $("#r").html("<option value='r19'>R2019</option>");
                        break;
                        case 'mech':
                            $("#r").html("<option value='r19'>R2019</option>");
                            break;
                            case 'pr':
                                $("#r").html("<option value='r19'>R2019</option>");
                                break;
                                case 'rpt':
                                    $("#r").html("<option value='r19'>R2019</option>");
                                    break;

     }
  });
});
function link() {
    var dep = document.getElementById("d").value;
    var rr = document.getElementById("r").value;
    var ss = document.getElementById("s").value;

    if(dep=="dpt"){
      alert("Choose Correct Department")
    }
    else {
      document.getElementById("l").href="/"+dep+"/"+rr+"/"+ss;
    }

}
</script>

  </body>
